{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "ES2020",
        "declaration": true,
        "declarationDir": "./dist",
        "module": "CommonJS",
        "noImplicitAny": false,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "typeRoots": [
            "./node_modules/@types",
        ],
    },
    "ts-node": {
        "files": true
    },
    "include": [
        "src/**/*",
        "./src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "typing"
    ]
}